{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git",
		"useIgnoreFile": true
	},
	"files": {
		"include": ["packages/**"],
		"ignore": ["**/node_modules/**"]
	},
	"formatter": {
		"enabled": false
	},
	"organizeImports": {
		"enabled": true
	},
	"javascript": {
		"formatter": {
			"trailingComma": "none"
		}
	},
	"linter": {
		"rules": {
			"recommended": true,
			"complexity": {
				"noExcessiveCognitiveComplexity": "warn"
			},
			"style": {
				"noNonNullAssertion": "off"
			},
			"nursery": {
				"noDefaultExport": "error",
				"noUnusedImports": "error",
				"useAwait": "error",
				"useGroupedTypeImport": "error"
			},
			"suspicious": {
				"noApproximativeNumericConstant": "error"
			}
		}
	},
	"overrides": [
		{
			"include": [".vscode/*.json", "biome.json"],
			"json": {
				"parser": {
					"allowComments": true
				}
			}
		},
		{
			"include": ["vite.config.ts", "vitest.config.ts"],
			"linter": {
				"rules": {
					"nursery": { "noDefaultExport": "off" }
				}
			}
		}
	]
}
